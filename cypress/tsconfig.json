{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "cypress", "cypress-real-events", "@testing-library/cypress", "./support"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "fixtures/*": ["./fixtures/*"],
      "support/*": ["./support/*"],
      "src/*": ["../src/*"]
    }
  },
  "include": ["**/*.cy.ts", "**/*.cy.tsx", "cypress.d.ts"]
}
