{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": [
      "node",
      "cypress",
      "cypress-real-events",
      "@testing-library/cypress",
      "cypress-axe",
      "./support"
    ],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "paths": {
      "fixtures/*": ["./fixtures/*"],
      "support/*": ["./support/*"],
      "src/*": ["../src/*"]
    }
  },
  "include": ["**/*.cy.ts", "**/*.cy.tsx", "cypress.d.ts", "../src/env.d.ts"]
}
