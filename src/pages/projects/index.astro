import { ClientRouter } from "astro:transitions";
import { getCollection } from "astro:content";
import Header from "../../components/header/index.astro";
import SocialLinks from "../../components/social-links/index.astro";
import CurrentlyListening from "../../components/currently-listening/index";
import PAGE_CONTENT from "../../data/index.json";
import "../../assets/styles/index.scss";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

// Constants
const DEFAULT_THEME = {
	background: "#000000",
	foreground: "#ffffff",
} as const;

const THUMBNAIL_DIMENSIONS = {
	width: 123,
	height: 123,
} as const;

const DATE_FORMAT_OPTIONS: Intl.DateTimeFormatOptions = {
	year: "numeric",
	month: "long",
};

// Helper functions
function normalizeThumbnailPath(path: string): string {
	return path.startsWith("/") ? path : `/${path}`;
}

function getProjectTheme(project: CollectionEntry<"projects">) {
	return {
		background: project.data.themeBackground || DEFAULT_THEME.background,
		foreground: project.data.themeForeground || DEFAULT_THEME.foreground,
	};
}

function formatProjectDate(date: Date): string {
	return date.toLocaleDateString("en-US", DATE_FORMAT_OPTIONS);
}

function getTransitionNames(slug: string) {
	return {
		title: `project-title-${slug}`,
		image: `project-image-${slug}`,
	};
}

// Data fetching and processing
const projects = (await getCollection("projects")).sort(
	(a, b) => b.data.date.getTime() - a.data.date.getTime(),
);

// Computed values
const currentYear = new Date().getFullYear();
const footer = `© ${currentYear} - ${PAGE_CONTENT.copyright}`;
---

<!doctype html>
<html
	lang="en"
	prefix="http://ogp.me/ns#"
	itemtype="http://schema.org/WebPage"
	dir="ltr"
	data-testid="html-element"
>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1.0,viewport-fit=cover" />
		<title>Projects - João Dias</title>
		<meta
			name="description"
			content="Selected projects by João Dias, Frontend Engineer specializing in Web Accessibility"
		/>
		<link rel="icon" type="image/png" href="/favicon_fallback.png" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<ClientRouter />
		<style lang="scss">
			// CSS Custom Properties
			:root {
				--projects-spacing-sm: 1rem;
				--projects-spacing-md: 2rem;
				--projects-spacing-lg: 3rem;
				--projects-thumbnail-size: 7.6875rem;
				--projects-card-border-radius: 1.5rem;
				--projects-transition-duration: 200ms;
			}

			// Breakpoints (cannot use CSS variables in media queries)
			// sm: 40rem, md: 60rem

			// Block: projects-page
			.projects-page {
				&__container {
					width: 100%;
					display: grid;
					grid-template-rows: var(--header-height) 1fr;
					gap: var(--projects-spacing-lg);

					@media (min-width: 60rem) {
						grid-template-rows: auto 1fr;
						gap: 0;
					}
				}
			}

			// Block: projects-main
			.projects-main {
				display: flex;
				flex-direction: column;
				min-height: 100vh;
				padding-block: 10vh;
				padding-inline: var(--projects-spacing-sm);
				margin: 0 auto;
				max-width: 100vw;

				@media (min-width: 60rem) {
					padding-block: 6rem;
					padding-inline: var(--projects-spacing-lg);
					max-width: 75rem;
				}
			}

			// Block: projects-header
			.projects-header {
				margin-bottom: var(--projects-spacing-lg);

				&__title {
					font-family: var(--heading-font-family);
					font-size: 2.5rem;
					line-height: 1.2;
					margin-bottom: var(--projects-spacing-sm);

					@media (min-width: 60rem) {
						font-size: 3.5rem;
					}
				}
			}

			// Block: projects-grid
			.projects-grid {
				display: grid;
				grid-template-columns: 1fr;
				gap: var(--projects-spacing-lg);
				list-style: none;
				padding: 0;
				margin: 0;

				@media (min-width: 40rem) {
					grid-template-columns: repeat(2, 1fr);
				}
			}

			// Block: project-card
			.project-card {
				padding-block: var(--projects-spacing-md);
				padding-inline: var(--projects-spacing-sm);
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				align-items: center;
				gap: var(--projects-spacing-md);
				background-color: var(--background-color-hover, var(--background-color));
				color: var(--text-color-hover, var(--text-color));
				transition: all var(--projects-transition-duration) ease-in-out;
				border-radius: var(--projects-card-border-radius);
				width: 100%;
				text-decoration: none;
				appearance: none;
				border: none;

				&:hover,
				&:focus {
					cursor: pointer;
					background-color: var(--background-color-hover);
					color: var(--text-color-hover);
					outline-color: transparent;
					outline-offset: -2px;
				}

				@media (min-width: 60rem) {
					padding-inline: var(--projects-spacing-md);
				}
			}

			// Block: project-thumbnail
			.project-thumbnail {
				width: var(--projects-thumbnail-size);
				height: var(--projects-thumbnail-size);

				&,
				img {
					border-radius: 50%;
				}
			}

			// Block: project-content
			.project-content {
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				align-items: center;
				flex-wrap: wrap;

				&__title {
					font-family: var(--heading-font-family);
					font-weight: 400;
					font-size: clamp(2rem, 8vw, 3rem);
					line-height: 1.1666666667;
					margin-bottom: 0.5rem;
					text-align: center;
				}

				&__subtitle {
					font-family: var(--text-font-family);
					font-weight: 300;
					font-size: 1.125rem;
					line-height: 1.375rem;
					text-align: center;
					margin-bottom: var(--projects-spacing-sm);
				}

				&__meta {
					font-family: var(--text-font-family);
					font-size: 0.875rem;
					opacity: 0.8;
					margin-bottom: var(--projects-spacing-sm);
				}
			}

			// Block: project-skills
			.project-skills {
				list-style-type: none;
				margin: 0;
				padding: 0;
				display: flex;
				flex-direction: row;
				justify-content: center;
				align-items: center;
				flex-wrap: wrap;
				gap: 0.5rem;
				font-family: var(--text-font-family);
				font-weight: 500;
				font-size: 0.875rem;
				line-height: 1;

				&__item {
					text-transform: lowercase;

					&::before {
						content: "#";
					}
				}
			}

			@media (min-width: 60rem) {
				.project-card {
					flex-direction: row;
					padding-block: 6rem;
				}

				.project-content {
					justify-content: flex-start;
					align-items: flex-start;

					&__title {
						text-align: left;
					}

					&__subtitle {
						text-align: left;
					}
				}

				.project-skills {
					justify-content: flex-start;
				}
			}

			// Block: projects-footer
			.projects-footer {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: var(--projects-spacing-md);
				width: 100%;
				flex-grow: 1;

				&__bottom {
					display: flex;
					flex-direction: column;
					align-items: center;
				}
			}

			// Block: currently-listening (already BEM compliant)
			.currently-listening {
				display: flex;
				flex-direction: column;
				align-items: stretch;
				gap: var(--projects-spacing-sm);
				width: 100%;

				&__title {
					font-family: var(--text-font-family);
					font-weight: 500;
					font-size: 0.875rem;
					line-height: 1.0625rem;
					text-transform: uppercase;
					color: var(--text-color);
					max-width: 80rem;
					margin: 0 auto;
					width: 100%;
					padding-inline: var(--projects-spacing-lg);
					text-align: center;
				}

				&__container {
					display: grid;
					place-items: center;
					background-color: var(--background-color);
					box-shadow:
						0 -1px 0 0 var(--text-color),
						0 1px 0 0 var(--text-color);
					position: relative;

					@media (min-width: 60rem) {
						height: 5rem;
					}
				}
			}
		</style>
	</head>

	<body>
		<div class="projects-page__container">
			<Header />
			<main class="projects-main">
				<header class="projects-header">
					<h1 class="projects-header__title">All projects</h1>
				</header>
				<ul class="projects-grid">
					{
						projects.map((project) => {
							const thumbnailPath = normalizeThumbnailPath(project.data.thumbnail);
							const theme = getProjectTheme(project);
							const transitionNames = getTransitionNames(project.slug);
							const cardStyle = {
								"--background-color-hover": theme.background,
								"--text-color-hover": theme.foreground,
							};
							const ariaLabel = `${project.data.title}, ${project.data.shortDescription}`;

							return (
								<li>
									<a
										href={`/projects/${project.slug}`}
										class="project-card"
										style={cardStyle}
										aria-label={ariaLabel}
									>
										<div class="project-thumbnail">
											<Image
												src={thumbnailPath}
												width={THUMBNAIL_DIMENSIONS.width}
												height={THUMBNAIL_DIMENSIONS.height}
												alt={`${project.data.title} project thumbnail`}
												loading="lazy"
												transition:name={transitionNames.image}
											/>
										</div>
										<div class="project-content">
											<h2 class="project-content__title" transition:name={transitionNames.title}>
												{project.data.title}
											</h2>
											<p class="project-content__subtitle">{project.data.shortDescription}</p>
											<time
												class="project-content__meta"
												datetime={project.data.date.toISOString()}
											>
												{formatProjectDate(project.data.date)}
											</time>
											<ul class="project-skills">
												{project.data.skills.map((skill) => (
													<li class="project-skills__item">{skill}</li>
												))}
											</ul>
										</div>
									</a>
								</li>
							);
						})
					}
				</ul>
			</main>
			<footer class="projects-footer" id="footer">
				<div class="currently-listening" data-testid="currently-listening">
					<h2
						id="current-listening"
						class="currently-listening__title"
						data-testid="currently-listening-main-title"
					>
						{PAGE_CONTENT.footer.title}
					</h2>
					<div class="currently-listening__container">
						<CurrentlyListening client:load />
					</div>
				</div>
				<div class="projects-footer__bottom">
					<SocialLinks />
					<p>
						{footer}
					</p>
				</div>
			</footer>
		</div>
		<div class="grid-background" role="presentation"></div>
	</body>
</html>
