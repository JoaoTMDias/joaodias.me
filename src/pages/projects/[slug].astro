---
import { getCollection } from "astro:content";
import Header from "../../components/header/index.astro";
import SocialLinks from "../../components/social-links/index.astro";
import CurrentlyListening from "../../components/currently-listening/index.tsx";
import PAGE_CONTENT from "../../data/index.json";
import "../../assets/styles/index.scss";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
	const projects = await getCollection("projects");
	return projects.map((project) => ({
		params: { slug: project.slug },
		props: { project },
	}));
}

type Props = {
	project: CollectionEntry<"projects">;
};

const { project } = Astro.props;
const { Content } = await project.render();
const currentYear = new Date().getFullYear();
const footer = `© ${currentYear} - ${PAGE_CONTENT.copyright}`;
---

<!doctype html>
<html
	lang="en"
	prefix="http://ogp.me/ns#"
	itemtype="http://schema.org/WebPage"
	dir="ltr"
	data-testid="html-element"
>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1.0,viewport-fit=cover" />
		<title>{project.data.title} - João Dias</title>
		<meta name="description" content={project.data.shortDescription} />
		<link rel="icon" type="image/png" href="/favicon_fallback.png" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<style lang="scss">
			.container {
				width: 100%;
				display: grid;
				grid-template-rows: var(--header-height) 1fr;
				grid-gap: 3rem;

				@media (min-width: 60rem) {
					grid-template-rows: auto 1fr;
					grid-gap: 0;
				}
			}

			.main-content {
				display: flex;
				flex-direction: column;
				min-height: 100vh;
				padding-block: 10vh;
				padding-inline: 1rem;
				margin: 0 auto;
				max-width: 100vw;

				@media (min-width: 60rem) {
					padding-block: 6rem;
					padding-inline: 3rem;
					max-width: 75rem;
				}
			}

			.project-header {
				margin-bottom: 3rem;

				h1 {
					font-family: var(--heading-font-family);
					font-size: 2.5rem;
					line-height: 1.2;
					margin-bottom: 1rem;

					@media (min-width: 60rem) {
						font-size: 3.5rem;
					}
				}

				.short-description {
					font-family: var(--text-font-family);
					font-size: 1.25rem;
					line-height: 1.5;
					margin-bottom: 1rem;
				}

				.meta {
					display: flex;
					flex-wrap: wrap;
					gap: 1rem;
					font-family: var(--text-font-family);
					font-size: 0.875rem;
					color: var(--text-color);
					opacity: 0.8;
				}

				.skills {
					display: flex;
					flex-wrap: wrap;
					gap: 0.5rem;
					margin-top: 1rem;

					.skill {
						padding: 0.25rem 0.75rem;
						background-color: var(--text-color);
						color: var(--background-color);
						border-radius: 1rem;
						font-size: 0.875rem;
					}
				}
			}

			.project-section {
				margin-bottom: 3rem;

				h2 {
					font-family: var(--heading-font-family);
					font-size: 2rem;
					margin-bottom: 1rem;
				}

				p {
					font-family: var(--text-font-family);
					font-size: 1.125rem;
					line-height: 1.75;
					margin-bottom: 1rem;
				}
			}

			.project-links {
				display: flex;
				gap: 1rem;
				margin-top: 2rem;

				a {
					padding: 0.75rem 1.5rem;
					border: 1px solid var(--text-color);
					color: var(--text-color);
					text-decoration: none;
					border-radius: 3rem;
					font-family: var(--text-font-family);
					transition: all 0.2s ease;

					&:hover,
					&:focus {
						background-color: var(--text-color);
						color: var(--background-color);
					}
				}
			}

			.footer {
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				align-items: center;
				gap: 2rem;
				width: 100%;
				flex-grow: 1;

				&__bottom {
					display: flex;
					flex-direction: column;
					justify-content: flex-start;
					align-items: center;
				}
			}

			.currently-listening {
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				align-items: stretch;
				gap: 1rem;
				width: 100%;

				&__title {
					font-family: var(--text-font-family);
					font-style: normal;
					font-weight: 500;
					font-size: 0.875rem;
					line-height: 1.0625rem;
					text-transform: uppercase;
					color: var(--text-color);
					max-width: 80rem;
					margin: 0 auto;
					width: 100%;
					padding-inline: 3rem;
					text-align: center;
				}

				&__container {
					display: grid;
					place-items: center;
					background-color: var(--background-color);
					box-shadow:
						0 -1px 0 0 var(--text-color),
						0 1px 0 0 var(--text-color);
					position: relative;

					@media (min-width: 60rem) {
						height: 5rem;
					}
				}
			}
		</style>
	</head>

	<body>
		<div class="container">
			<Header />
			<main class="main-content">
				<article>
					<header class="project-header">
						<h1>{project.data.title}</h1>
						<p class="short-description">{project.data.shortDescription}</p>
						<div class="meta">
							<time datetime={project.data.date.toISOString()}>
								{project.data.date.toLocaleDateString("en-US", {
									year: "numeric",
									month: "long",
								})}
							</time>
						</div>
						<div class="skills">
							{project.data.skills.map((skill) => (
								<span class="skill">#{skill}</span>
							))}
						</div>
					</header>

					<div class="project-section">
						<h2>Overview</h2>
						<p>{project.data.description}</p>
					</div>

					<div class="project-section">
						<h2>Accessibility Considerations</h2>
						<div class="accessibility-content">
							{project.data.accessibilityConsiderations.split('\n').map((paragraph) => (
								paragraph.trim() && <p>{paragraph.trim()}</p>
							))}
						</div>
					</div>

					<div class="project-section">
						<h2>Technical Approach</h2>
						<div class="technical-content">
							{project.data.technicalApproach.split('\n').map((paragraph) => (
								paragraph.trim() && <p>{paragraph.trim()}</p>
							))}
						</div>
					</div>

					{project.data.process && (
						<div class="project-section">
							<h2>Process</h2>
							<div class="process-content">
								{project.data.process.split('\n').map((paragraph) => (
									paragraph.trim() && <p>{paragraph.trim()}</p>
								))}
							</div>
						</div>
					)}

					{project.data.results && (
						<div class="project-section">
							<h2>Results & Impact</h2>
							<div class="results-content">
								{project.data.results.split('\n').map((paragraph) => (
									paragraph.trim() && <p>{paragraph.trim()}</p>
								))}
							</div>
						</div>
					)}

					<div class="project-section">
						<h2>Full Story</h2>
						<div class="project-content">
							<Content />
						</div>
					</div>

					<div class="project-links">
						{project.data.sourceCode && (
							<a href={project.data.sourceCode} target="_blank" rel="noopener noreferrer">
								View Source Code
							</a>
						)}
						{project.data.liveDemo && (
							<a href={project.data.liveDemo} target="_blank" rel="noopener noreferrer">
								Live Demo
							</a>
						)}
						<a href="/projects">← Back to Projects</a>
					</div>
				</article>
			</main>
			<footer class="footer" id="footer">
				<div class="currently-listening" data-testid="currently-listening">
					<h2
						id="current-listening"
						class="currently-listening__title"
						data-testid="currently-listening-main-title"
					>
						{PAGE_CONTENT.footer.title}
					</h2>
					<div class="currently-listening__container">
						<CurrentlyListening client:load />
					</div>
				</div>
				<div class="footer__bottom">
					<SocialLinks />
					<p class="footer__others">
						{footer}
					</p>
				</div>
			</footer>
		</div>
		<div class="grid-background" role="presentation"></div>
	</body>
</html>

