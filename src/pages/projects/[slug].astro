import { ClientRouter } from "astro:transitions";
import { getCollection } from "astro:content";
import Header from "../../components/header/index.astro";
import SocialLinks from "../../components/social-links/index.astro";
import CurrentlyListening from "../../components/currently-listening/index.tsx";
import PAGE_CONTENT from "../../data/index.json";
import "../../assets/styles/index.scss";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
	const projects = await getCollection("projects");
	return projects.map((project) => ({
		params: { slug: project.slug },
		props: { project },
	}));
}

type Props = {
	project: CollectionEntry<"projects">;
};

const { project } = Astro.props;
const { Content } = await project.render();
const currentYear = new Date().getFullYear();
const footer = `© ${currentYear} - ${PAGE_CONTENT.copyright}`;
const transitionName = `project-title-${project.slug}`;
const imageTransitionName = `project-image-${project.slug}`;

// Format date
const formattedDate = project.data.date.toLocaleDateString("en-US", {
	year: "numeric",
	month: "long",
});

// Get cover image if available
const coverImage = project.data.cover
	? (project.data.cover.startsWith("/") ? project.data.cover : `/${project.data.cover}`)
	: null;
---

<!doctype html>
<html
	lang="en"
	prefix="http://ogp.me/ns#"
	itemtype="http://schema.org/WebPage"
	dir="ltr"
	data-testid="html-element"
>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1.0,viewport-fit=cover" />
		<title>{project.data.title} - João Dias</title>
		<meta name="description" content={project.data.shortDescription} />
		<link rel="icon" type="image/png" href="/favicon_fallback.png" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<ClientRouter />
		<style lang="scss">
			.container {
				width: 100%;
				display: grid;
				grid-template-rows: var(--header-height) 1fr;
				grid-gap: 3rem;

				@media (min-width: 60rem) {
					grid-template-rows: auto 1fr;
					grid-gap: 0;
				}
			}

			.project-dialog {
				background: var(--background-color);
				color: var(--text-color);
				padding-block: 2rem;
				padding-inline: 2rem;
				width: 100%;
				overflow-y: auto;
				overscroll-behavior: contain;

				@media (min-width: 60rem) {
					padding-inline: 3rem;
				}
			}

			.main {
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				align-items: center;
				width: 100%;
				max-width: 90rem;
				margin: 2rem auto 0;
				gap: 3rem;
			}

			.top {
				display: grid;
				grid-template-columns: 1fr;
				grid-template-rows: auto;
				grid-gap: 2rem;
				width: 100%;

				@media (min-width: 70rem) {
					grid-template-columns: 0.4fr 0.6fr;
					grid-gap: 3rem;
				}
			}

			.header {
				display: flex;
				flex-direction: column;
				align-items: flex-start;
				gap: 2rem;
			}

			.heading {
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				align-items: flex-start;
				gap: 0.5rem;
			}

			.title {
				font-family: var(--heading-font-family);
				font-weight: 300;
				font-size: 3rem;
				text-align: left;
				margin: 0;
			}

			.date {
				font-family: var(--text-font-family);
				font-size: 1.5rem;
				font-weight: 400;
				text-align: left;
				margin: 0;
			}

			.intro {
				font-family: var(--text-font-family);
				font-size: 1.375rem;
				line-height: 1.5;
				margin: 0;
			}

			.cover {
				--cover-background-color: var(--text-color-faded);

				display: flex;
				flex-direction: row;
				justify-content: center;
				align-items: center;

				&,
				img {
					width: 100%;
					height: auto;
					aspect-ratio: 4/3;
				}

				img {
					background-color: var(--cover-background-color);
				}
			}

			.content {
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				align-items: center;
				width: 100%;
				gap: 3rem;
			}

			.projectMeta {
				border-width: 2px;
				border-color: var(--text-color-faded);
				border-style: solid;
				padding: 4rem 3rem;
				display: grid;
				grid-template-columns: 1fr;
				grid-gap: 2rem;
				width: 100%;

				@media (min-width: 40rem) {
					grid-template-columns: repeat(3, 1fr);
				}
			}

			.projectColumn {
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				align-items: flex-start;
				gap: 1rem;

				h4 {
					font-family: var(--text-font-family);
					font-size: 1.125rem;
					margin: 0;
				}

				h4,
				ul li,
				p {
					font-size: 1.125rem;
				}

				ul {
					font-size: 1rem;
					margin: 0;
					padding: 0;
					list-style: none;
					width: 100%;
					display: flex;
					flex-direction: column;
					justify-content: flex-start;
					align-items: flex-start;
					gap: 0.5rem;
				}

				li {
					position: relative;
				}

				.withHashes li:before {
					content: "#";
					margin-right: 0.5rem;
					opacity: 0.5;
				}
			}

			.section {
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				align-items: flex-start;
				text-align: left;
				gap: 1rem;
				width: 100%;
				max-width: 70ch;

				h3,
				p {
					margin: 0 auto;
					width: 100%;
				}

				h3 {
					font-family: var(--heading-font-family);
					font-weight: 400;
					font-size: 2rem;
				}

				p {
					font-family: var(--text-font-family);
					font-size: 1.125rem;
					line-height: 1.618;
				}
			}

			.gallery {
				background-color: var(--text-color-faded);
				width: 100%;
				height: auto;
			}

			.footer {
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				align-items: center;
				gap: 2rem;
				width: 100%;
				flex-grow: 1;

				&__bottom {
					display: flex;
					flex-direction: column;
					justify-content: flex-start;
					align-items: center;
				}
			}

			.currently-listening {
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				align-items: stretch;
				gap: 1rem;
				width: 100%;

				&__title {
					font-family: var(--text-font-family);
					font-style: normal;
					font-weight: 500;
					font-size: 0.875rem;
					line-height: 1.0625rem;
					text-transform: uppercase;
					color: var(--text-color);
					max-width: 80rem;
					margin: 0 auto;
					width: 100%;
					padding-inline: 3rem;
					text-align: center;
				}

				&__container {
					display: grid;
					place-items: center;
					background-color: var(--background-color);
					box-shadow:
						0 -1px 0 0 var(--text-color),
						0 1px 0 0 var(--text-color);
					position: relative;

					@media (min-width: 60rem) {
						height: 5rem;
					}
				}
			}
		</style>
	</head>

	<body>
		<div class="container">
			<Header />
			<main class="project-dialog">
				<div class="main">
					<div class="top">
						<div class="header">
							<div class="heading">
								<h1 class="title" transition:name={transitionName}>
									{project.data.title}
								</h1>
								<p class="date">
									<time datetime={project.data.date.toISOString()}>
										{formattedDate}
									</time>
								</p>
							</div>
							<p class="intro">{project.data.description}</p>
						</div>
						{coverImage && (
							<div class="cover">
								<img
									src={coverImage}
									alt={`${project.data.title} cover image`}
									loading="lazy"
									transition:name={imageTransitionName}
								/>
							</div>
						)}
					</div>
					<div class="content">
						<div class="projectMeta">
							<h3 class="sr-only">Project Information</h3>
							<div class="projectColumn">
								<h4>Skills</h4>
								<ul class="withHashes">
									{project.data.skills.map((skill) => (
										<li>{skill}</li>
									))}
								</ul>
							</div>
							<div class="projectColumn">
								<h4>Date</h4>
								<p>{formattedDate}</p>
							</div>
							<div class="projectColumn">
								<h4>Source Code</h4>
								{project.data.sourceCode ? (
									<a href={project.data.sourceCode} target="_blank" rel="noopener noreferrer">
										View source code
									</a>
								) : (
									<p>Not available</p>
								)}
							</div>
						</div>

						<div class="section">
							<h3>Accessibility Considerations</h3>
							{
								project.data.accessibilityConsiderations
									.split("\n")
									.map((paragraph) => paragraph.trim() && <p>{paragraph.trim()}</p>)
							}
						</div>

						<div class="section">
							<h3>Technical Approach</h3>
							{
								project.data.technicalApproach
									.split("\n")
									.map((paragraph) => paragraph.trim() && <p>{paragraph.trim()}</p>)
							}
						</div>

						{project.data.process && (
							<div class="section">
								<h3>Process</h3>
								{
									project.data.process
										.split("\n")
										.map((paragraph) => paragraph.trim() && <p>{paragraph.trim()}</p>)
								}
							</div>
						)}

						{project.data.results && (
							<div class="section">
								<h3>Results & Impact</h3>
								{
									project.data.results
										.split("\n")
										.map((paragraph) => paragraph.trim() && <p>{paragraph.trim()}</p>)
								}
							</div>
						)}

						<div class="section">
							<h3>Full Story</h3>
							<div class="project-content">
								<Content />
							</div>
						</div>
					</div>
				</div>
			</main>
			<footer class="footer" id="footer">
				<div class="currently-listening" data-testid="currently-listening">
					<h2
						id="current-listening"
						class="currently-listening__title"
						data-testid="currently-listening-main-title"
					>
						{PAGE_CONTENT.footer.title}
					</h2>
					<div class="currently-listening__container">
						<CurrentlyListening client:load />
					</div>
				</div>
				<div class="footer__bottom">
					<SocialLinks />
					<p class="footer__others">
						{footer}
					</p>
				</div>
			</footer>
		</div>
		<div class="grid-background" role="presentation"></div>
	</body>
</html>
