---
import FancyLink from "../fancy-link";
---

<nav aria-label="Sectio Navigation">
  <ul class="header__list">
    <li class="header__list__item">
      <FancyLink href="#about" text="About" />
    </li>
    <li class="header__list__item">
      <FancyLink href="#work" text="Work" />
    </li>
    <li class="header__list__item">
      <FancyLink href="#contact" text="Contact" />
    </li>
  </ul>
</nav>

<style lang="scss">
  nav, ul {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    @media (min-width: 60rem) {
    justify-content: flex-end;
    }
  }

  nav {
    width: 100%;
  }

  ul {
    margin: 0;
    padding: 0;
    gap: 1rem;
    list-style-type: none;
  }

  li {
    min-width: 5.625rem;
    height: 2rem;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    font-family: var(--text-font-family);
    font-style: normal;
    font-weight: 400;
    font-size: 1rem;
    line-height: 2rem;
  }

  a {
    text-decoration: none;
    text-align: center;
    width: 100%;
    height: 100%;
  }
</style>
