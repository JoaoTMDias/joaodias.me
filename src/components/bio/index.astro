---
import PAGE_CONTENT from "../../data/index.json";
---

<div class="sub-section">
  <h3 class="sr-only">{PAGE_CONTENT.about.bio.title}</h3>
  <div class="bio">
    <div class="bio__picture">
      <img class="bio__image" src={PAGE_CONTENT.about.bio["bio-picture"].src}
        width={PAGE_CONTENT.about.bio["bio-picture"].width} height={PAGE_CONTENT.about.bio["bio-picture"].height}
        alt={PAGE_CONTENT.about.bio["bio-picture"].alt} data-testid="bio-image">
    </div>
    <div class="bio__content">
      <h4 class="bio__title" data-testid="bio-intro">{PAGE_CONTENT.about.bio.mainTitle}</h4>
      {PAGE_CONTENT.about.bio.description.map((paragraph, index) => {
      return (
      <p key={index} class="bio__paragraph" data-testid="bio-description">{paragraph}</p>
      )
      })}
    </div>
  </div>
</div>

<style lang="scss">
  .bio {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 2rem;
    width: 100%;

    @media (min-width: 60rem) {
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      gap: 1rem;
    }

    &__picture {
      position: relative;
      width: fit-content;

      &:after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: transparent;
        border: 2px solid var(--text-color);
        transform: translate3d(6vw, 4vh, 0) scale(1);
        pointer-events: none;
        transition: transform 200ms ease-in-out;
        border-radius: 4px;
        filter: invert(1);

        @media (min-width: 60rem) {
          transform: translate3d(1rem, 1.5rem, 0) scale(1.025);
        }

        @media (min-width: 70rem) {
          transform: translate3d(3rem, 1.5rem, 0) scale(1.025);
        }

        @media (forced-colors: active) {
          display: none;
        }
      }

      @media (prefers-reduced-motion: no-preference) {
        &:hover:after {
          @media (min-width: 60rem) {
            transform: translate3d(2rem, 1rem, 0) scale(1.025);
          }
        }
      }

      @media (min-width: 60rem) {
        grid-column-start: 2;
        grid-column-end: 5;
      }
    }

    &__image {
      border-radius: 2px;
    }

    &__content {
      @media (min-width: 60rem) {
        grid-column-start: 7;
        grid-column-end: 12;
      }
    }

    &__title {
      font-family: var(--heading-font-family);
      font-style: normal;
      font-weight: 500;
      font-size: 2rem;
      line-height: 112%;
      margin-block: 3rem;
    }

    &__paragraph {
      font-family: var(--text-font-family);
      font-style: normal;
      font-weight: 300;
      font-size: clamp(1.2rem, 6vw, 1.375rem);
      line-height: 1.2727272727;

      + .bio__paragraph {
        margin-top: 1.5rem;
      }
    }
  }
</style>
